<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>

<%= form_for @user do |f| %>
<table>

  <tr>
    <td>
      <%= f.label :first_name %>
    </td>
    <td>
      <%= f.text_field :first_name %>
    </td>
  </tr>

  <tr>
    <td>
      <%= f.label :last_name %>
    </td>
    <td>
      <%= f.text_field :last_name %>
    </td>
  </tr>

  <tr>
    <td>
      <%= f.label :email %>
    </td>
    <td>
      <%= f.email_field :email %>
    </td>
  </tr>
  <% if @user.new_record? %>
  <tr>
    <td>
      <%= f.label :password %>
    </td>
    <td>
      <%= f.password_field :password %>
    </td>
  </tr>
<tr>
  <td>
    <%= f.label :password_confirmation %>
  </td>
  <td>
    <%= f.password_field :password_confirmation %>
  </td>
</tr>
<% end %>
<tr>
  <td>
    <%= f.submit %>
  </td>
</tr>
  </table>
<% end %>
