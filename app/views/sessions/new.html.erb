

  <%= form_tag sessions_path, method: :post do %>
    <table>
      <tr>
        <td>
          <%= label_tag :email %>
        </td>
        <td>
          <%= email_field_tag :email %>
        </td>
      </tr>

      <tr>
        <td>
          <%= label_tag :password %>
        </td>
        <td>
          <%= password_field_tag :password %>
        </td>
      </tr>
      <tr>
        <td>
          <%= submit_tag "Log In" %>
        </td>
      </tr>
      <tr>
        <td>
          <% link_to 'Forgot Password?'  %>
        </td>
      </tr>
    </table>
  <% end %>
